{
  "scopeName": "source.axiom",
  "fileTypes": [
    "axiom",
    "axm"
  ],
  "name": "Axiom",
  "patterns": [
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.axiom",
          "match": "\\b(return|if|else)\\b"
        },
        {
          "name": "keyword.declaration.axiom",
          "match": "\\b(function|let)\\b"
        },
        {
          "name": "entity.name.type.axiom",
          "match": "\\b(i32|bool)\\b"
        }
      ]
    }
  }
}